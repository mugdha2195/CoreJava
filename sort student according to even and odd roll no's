package test;
import java.util.Scanner;
import java.util.ArrayList;


 class Student {
	 int rolno;
	 String name;
	
	Student(String sn,int a){
		this.rolno=a;
		this.name=sn;
	}

}
public class practice {
	
	public static void main(String[] args)
    {
		
		int a1;
		String name;
		Scanner s =new Scanner(System.in);
		System.out.println("Enter the number Students");
		int n= s.nextInt();
		ArrayList<Student> stu= new ArrayList<Student>();
		
				
		System.out.println("Enter the Student details ");
		
		for (int i=0;i<n;i++) {
			System.out.println("roll no ");
			a1=s.nextInt();			
			System.out.println("Name ");
			name=s.next();
			Student a= new Student(name,a1);
			stu.add(a);
		}
		
		System.out.println("Select option");
		System.out.println("1: Print");
		System.out.println("2; Print odd roll no");
		System.out.println("3: Print even roll no");
		System.out.println("0: EXIT");
		
		do{
			a1=s.nextInt();
			switch(a1) {
		
		case 1:
			printArray(stu);
			break;
		case 2:
			ArrayList<Student> s1= new ArrayList<Student>();
			s1=even(stu);
			printArray(s1);
			break;
		case 3:
			ArrayList<Student> s2= new ArrayList<Student>();
			s2=odd(stu);
			printArray(s2);
			break;
		}}while(a1!=0);
	}
	
	public static void printArray(ArrayList<Student> a) {

		for (int i=0;i<a.size();i++) {
			Student s=a.get(i);
			System.out.println("Student age: " +s.rolno);
			System.out.println("Student name: " +s.name+"\n");
			
		}
		
	}
	public static ArrayList<Student> even(ArrayList<Student> a) {
		ArrayList<Student> even= new ArrayList<Student>();
		for(int i=0;i<a.size();i++)
		{
			Student s=new Student();
			s=a.get(i);
			if((s.rolno%2)==0)
				even.add(s);
			}
		return even;
		}
	
	public static ArrayList<Student> odd(ArrayList<Student> a) {
		ArrayList<Student> odd= new ArrayList<Student>();
		for(int i=0;i<a.size();i++)
		{
			Student s=new Student();
			s=a.get(i);
			if((s.rolno%2)!=0)
				odd.add(s);
			}
		return odd;
		}
}
